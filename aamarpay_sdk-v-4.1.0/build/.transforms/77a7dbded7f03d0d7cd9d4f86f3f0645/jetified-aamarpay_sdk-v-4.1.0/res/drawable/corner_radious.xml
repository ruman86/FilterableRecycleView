<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="#af6a01" />
            <gradient android:startColor="#FE9900"
                android:centerColor="#FE9900"
                android:angle="90"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="5px">
        <shape  android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:radius="5dp" />
            <stroke android:color="#FE9900" android:width="1dp"/>
        </shape>
    </item>

</layer-list>